<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvpelanggan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    tools:context=".pelanggan.DataPelanggan">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvdatapelanggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_pelanggan_id"
            android:id="@+id/tvidpelanggan"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="#6482AD"
            android:textColor="#181C14"
            android:padding="8dp"/>
        <TextView
            android:id="@+id/namapel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Nama_Pelanggan"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvidpelanggan"
            android:layout_marginStart="10dp"
            android:layout_marginTop="55dp"/>
        <TextView
            android:id="@+id/alamatpel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ALAMAT"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/namapel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="75dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/nohppel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/No_Hp"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/alamatpel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="95dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/cabangpel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cabang"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/nohppel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="115dp"
            android:layout_marginStart="10dp"/>

        <Button
            android:id="@+id/bthubungi"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/Hubungi"
            app:layout_constraintTop_toBottomOf="@id/cabangpel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="145dp"
            android:backgroundTint="#FCC737"/>

        <Button
            android:id="@+id/btlihat"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/Lihat"
            app:layout_constraintTop_toBottomOf="@id/cabangpel"
            app:layout_constraintStart_toEndOf="@id/hubungi"
            android:backgroundTint="#86D293"
            android:layout_marginStart="200dp"
            android:layout_marginTop="145dp"/>




    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>