<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LAYANAN"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Layanan"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/tvtambahpelanggan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="24dp"
        android:text="Layanann"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/layanan"
        android:layout_width="62dp"
        android:layout_height="50dp"
        android:src="@drawable/laundry"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="16dp" />
    <TextView
        android:id="@+id/tvPilih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="80dp"
        android:text="Pilih Layanan Laundry"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="360dp"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:ignore="TouchTargetSizeCheck" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuci Kering"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="360dp"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:ignore="TouchTargetSizeCheck"></CheckBox>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuci Setrika"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="360dp"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="245dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setrika Saja"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        android:layout_width="360dp"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:ignore="TouchTargetSizeCheck"></CheckBox>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuci Sprei"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvberat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berat Pakaian(kg):"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/card4"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>
    <EditText
        android:id="@+id/etberat"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        app:layout_constraintTop_toBottomOf="@id/tvberat"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:hint="Masukan berat dalam kg" />
    <Button
        android:id="@+id/hitung"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:text="HITUNG"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/etberat"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#780C28"/>
    <TextView
        android:id="@+id/tvharga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harga"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/hitung"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>

    <Button
        android:id="@+id/input"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:text="INPUT"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvharga"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#780C28"/>

</androidx.constraintlayout.widget.ConstraintLayout>
