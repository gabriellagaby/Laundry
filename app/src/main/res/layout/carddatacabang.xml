<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvpegawai"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    tools:context=".Cabang.DataCabangActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#DFD3C3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:id="@+id/cardcabang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Cabang"
            android:id="@+id/idTambahCabang"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="#B99470"
            android:textColor="#181C14"
            android:padding="8dp"/>
        <TextView
            android:id="@+id/NamaCabang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Cabang"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardcabang"
            android:layout_marginStart="10dp"
            android:layout_marginTop="55dp"/>
        <TextView
            android:id="@+id/Managercabang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manager Cabang"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/NamaCabang"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="75dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/alamatcabang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/Managercabang"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="95dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/terdaftarpgw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No.Hp"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/alamatcabang"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="115dp"
            android:layout_marginStart="10dp"/>

        <Button
            android:id="@+id/hubungipgw"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/Hubungi"
            app:layout_constraintTop_toBottomOf="@+id/hp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="155dp"
            android:backgroundTint="#B99470"/>

        <Button
            android:id="@+id/lihatpgw"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/Lihat"
            app:layout_constraintTop_toBottomOf="@+id/hp"
            app:layout_constraintStart_toEndOf="@+id/hubungi"
            android:backgroundTint="#B99470"
            android:layout_marginStart="200dp"
            android:layout_marginTop="155dp"/>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>